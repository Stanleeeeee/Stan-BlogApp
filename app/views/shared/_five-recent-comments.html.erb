<div class="border comments">
    <h2>Recent Comments</h2>
    <% if comments.any? %>
        <%= comments.each do |comment| %>
            <div>
                <p>
                    Comment #<%= comment.id %>: <%= comment.text %>
                </p>
            </div>
        <% end %>
    <% else %>
        <p>
            No comments yet.
        </p>
    <% end %>
</div>
