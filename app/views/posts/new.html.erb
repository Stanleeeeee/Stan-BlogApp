<section class="mx-auto pt-3" style="width: 50%;">
  <h1>New post</h1>
  <% if @post.errors.any? %>
    <div class="alert alert-danger">
      <% @post.errors.full_messages.each do |message| %>
        <div> <%= message %></div>
      <% end %>
    </div>
  <% end %>
  <%= form_with model: @post, url: user_posts_path  do |form|  %>
    <div class="mb-3">
      <%= form.label :title ,class: "form-label" %>
      <%= form.text_field :title ,class: "form-control" %>
    </div>
    <div class="mb-3">
      <%= form.label :text ,class: "form-label" %>
      <%= form.text_area :text ,class: "form-control text-area" %>
    </div>
    <%= form.submit "Add new post" ,class: "btn btn-outline-dark" %>
  <% end %>
</section>
